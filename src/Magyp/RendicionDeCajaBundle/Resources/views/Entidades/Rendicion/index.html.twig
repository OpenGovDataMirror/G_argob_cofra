<h1>Rendicion list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Expediente</th>
            <th>Totalrendicion</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('rendicion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.expediente }}</td>
            <td>{{ entity.totalRendicion }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('rendicion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('rendicion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('rendicion_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
