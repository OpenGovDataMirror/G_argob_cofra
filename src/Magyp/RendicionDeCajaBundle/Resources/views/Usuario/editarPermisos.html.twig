{% block estilosEspeciales %}
<link href="{{asset('css/rendicion.css')}}" rel="stylesheet" type="text/css">
<link href="{{asset('css/tinybox-style.css')}}" rel="stylesheet" type="text/css">
<link href="{{asset('css/af.css')}}" rel="stylesheet" type="text/css">
{% endblock %}
<style>
body {
	padding:5px;
	height:auto;
}
</style>
<div style="border: thin solid #000; padding: 5px; width: auto; margin:auto; height:275px;">
<table class="tablaTitulo" align="center" width="100%" style="margin-bottom:10px;">
    <thead>
        <tr>
            <th style="background-color:#5fb2ae; color:#fff;"> Permisos del Usuario {{ entity.nombre }}</th>
        </tr>
    </thead>
</table>

<table id="permisosTabla" width="100%" style="margin-bottom:20px;">
    <tr>
        <th>
            Permisos Actuales:
        </th>
	</tr>
	<tr style="text-align:center;">
        <td style="text-align:center;">
            
                {% for permiso in entity.permisosContenidos %}
                        <span>{{ permiso }}</span>
                {% endfor %}

        </td>
    </tr>
</table>

<form action="{{ path('front_gestionusuario_modificarpermisos', { 'id': entity.id }) }}" method="post" {{ form_enctype(editPermisos_Form) }}>
<table id="tablaPop" width="100%">
	<th>{{ form_label(editPermisos_Form.permisosContenidos) }} Disponibles:</th>
	<tr>
		<td class="permisos">{{ form_widget(editPermisos_Form.permisosContenidos) }}
		</td>
	</tr>
	{{ form_rest(editPermisos_Form) }}
	</table>
	<div style="margin-top:15px; margin-left:auto; margin-right:auto; text-align:center;">
		<button type="submit" class="btn btn-default">Modificar</button>
	
	</div>

</form>

