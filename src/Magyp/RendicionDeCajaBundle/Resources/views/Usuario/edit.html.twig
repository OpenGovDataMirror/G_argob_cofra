.tooltip {
    display: inline;
    position: relative;
  }
  .tooltip:hover:after {
    /*bottom: 26px;*/
    content: attr(title); /* este es el texto que será mostrado */
   /* left: 20%;*/
   bottom:26px;
   right:0;
    position: absolute;
    z-index: 98;
    /* el formato gráfico */
