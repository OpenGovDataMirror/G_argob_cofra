{% extends 'MagypRendicionDeCajaBundle:Archivar:base.html.twig' %}

{% block cuerpo %}
	{% embed "MagypRendicionDeCajaBundle:Plantilla:crear-modificar.html.twig" %}

        {% block titulo %}  {% endblock %}

        {% block heightMarcoFoto 'style="height:412px"' %}

        {% block imagenlateral %}  
            <img src={{ asset ("images/modificar-rendicion.png")}} width="150" height="350" alt="imagen" style="margin-top:35px;" />
        {% endblock %}

        {% block titulo_formulario "Modificar" %}	

        {% block tabla_formulario %}  
            <h3>Expediente: {{archivar.rendicion.getExpedienteCompleto}}</h3>  

            <form action="{{ path('af_archivar_update', { 'id': archivar.id }) }}" method="post">
                <table id="archivarForm" class="tablaFormularios" cellspacing="3" border="0" width="auto" >
                    <tr>
                        <td  class="padding_derecho" align="right">
                            Número de Caja:
                        </td>
                        <td class="padding_left" align="left" >
                            <input type="text" name="numerocaja" id="numerocaja" maxlength="255" size="30" required="required" value="{{archivar.caja}}"/>
                        </td>
                    </tr>
                    <tr>
                        <td  class="padding_derecho" align="right" style="width: 180px" >
                            Liquidación Enviada a Tesoreria: (código de barras)
                        </td>
                        <td align="right" >
                            <input type="text" name="liquidacionenviada" id="liquidacionenviada" maxlength="255" size="30" required="required" value="{{archivar.liquidacion.getCodigoDeBarras}}" />
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" scope="row" align="center">
                            <div style="margin:10px;" align="right">
                                <button type="submit" class="btn btn-default">Modificar</button>
                                <button type=button class="btn btn-default" onclick="history.back()" style="margin-left:auto; margin-right:auto;" >Volver</button>
                            </div>
                        </td>
                </table>
            </form>
        {% endblock %}


        {% block estilosEspeciales %}
            <link href="{{asset('css/plantillas/crear-modificar.css')}}" rel="stylesheet" type="text/css">
            <link href="{{asset('css/plantillas/crear-modificar-verde.css')}}" rel="stylesheet" type="text/css">
        {% endblock %}

	{% endembed %}

    {% block javascriptEspeciales %}
	{#error1	<script src="{{ asset('js/jquery-1.7.2.js') }}" type="text/javascript"></script> #}
        <script type="text/javascript" src="{{ asset('js/imghover.js')}}"></script>
	{% endblock %}
{% endblock %}






