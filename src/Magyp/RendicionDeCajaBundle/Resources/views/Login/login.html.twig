{% extends 'MagypRendicionDeCajaBundle:Plantilla:generalcofra_login.html.twig' %}

{% block cuerpo %}

	<section class="login">
		<div id="colIzLogin">
			<img src={{ asset ("images/ingresoSistema.jpg") }} width="150" height="300" alt="login" style="margin-top:35px;" />
		</div>
		<div id="colDeLogin">
			<table  width="100%" border="0" cellspacing="0" align="center" style="background-color:#FCCD59; text-align:center; color:#FFF; margin-top:0;">
				<tr>
					<th scope="col" style="text-align:center;  font-size:20px; background-color:#5fb2ae; color:#fff;">Sistema de Rendición de Caja</th>
				</tr>
			</table>
			{#usar mensaje de error{{error}} #} 
			<form action="{{ path('sistema_login_check') }}" method="post" id="login" style="width:auto;">
				
				<table class="tablaLogin" width="auto" style="margin-left:auto; margin-right:auto; " border="0" cellpadding="0" cellspacing="5" class
					     
					<tr>
						<td colspan="2">Usuario:</td>
					</tr>
					<tr>
						<td colspan="2"><fieldset id="inputs"><input type="text" autofocus required id="username" name="_username" placeholder="Usuario"/></fieldset>  </td>
					</tr>
					<tr>
						<td colspan="2">Contraseña:</td>
					</tr>
					<tr>
						<td colspan="2"><fieldset id="inputs"><input id="password" name="_password" type="password" placeholder="Contraseña" required/></fieldset></td>
					</tr>

					<tr>
						<td colspan="2"></td>
					</tr>
					<tr>
						<td colspan="2" style="text-align:center;"><span ><input type="submit"  class="btn btn-login"  value="Ingresar" /></span></td>
					</tr>



				</table>

			</form>

		</div>
	</section>
{% endblock %}
