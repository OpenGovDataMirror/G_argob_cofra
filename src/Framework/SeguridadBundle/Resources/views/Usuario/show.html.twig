{% extends "FrameworkSeguridadBundle:Admin:base.html.twig" %}

{% block body %}
<h1>Usuario</h1>

<table class="record_properties">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>Username</th>
			<td>{{ entity.username }}</td>
		</tr>
		<tr>
			<th>Password</th>
			<td>{{ entity.password }}</td>
		</tr>
		<tr>
			<th>Salt</th>
			<td>{{ entity.salt }}</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>{{ entity.email }}</td>
		</tr>
		<tr>
			<th>Activo</th>
			<td>{{ entity.activo }}</td>
		</tr>
		<tr>
			<th>Fechaexpiracioncuenta</th>
			<td>{{ entity.fechaExpiracionCuenta|date('Y-m-d H:i:s') }}</td>
		</tr>
		<tr>
			<th>Fechaexpiracioncredenciales</th>
			<td>{{ entity.fechaExpiracionCredenciales|date('Y-m-d H:i:s') }}</td>
		</tr>
		<tr>
			<th>Bloqueada</th>
			<td>{{ entity.bloqueada }}</td>
		</tr>
	</tbody>
</table>

<ul class="record_actions">
	<li>
		<a href="{{ path('admin_gestionusuario_usuario') }}">
			Back to the list
		</a>
	</li>
	<li>
		<a href="{{ path('admin_gestionusuario_usuario_edit', { 'id': entity.id }) }}">
			Edit
		</a>
	</li>
	<li>
		<form action="{{ path('admin_gestionusuario_usuario_delete', { 'id': entity.id }) }}" method="post">
			{{ form_widget(delete_form) }}
				<button type="submit">Delete</button>
			</form>
		</li>
	</ul>
{% endblock %}