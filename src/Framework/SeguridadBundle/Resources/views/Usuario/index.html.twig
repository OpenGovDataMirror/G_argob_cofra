{% extends "FrameworkSeguridadBundle:Admin:base.html.twig" %}

{% block body %}
<h1>Usuario list</h1>

<table class="records_list">
	<thead>
		<tr>
			<th>Id</th>
			<th>Username</th>
			<th>Email</th>
			<th>Activo</th>
			<th>Fecha Expiracion Cuenta</th>
			<th>Fecha Expiracion Credenciales</th>
			<th>Bloqueada</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
	{% for entity in entities %}
			<tr>
				<td><a href="{{ path('admin_gestionusuario_usuario_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
				<td>{{ entity.username }}</td>
				<td>{{ entity.email }}</td>
				<td>{{ entity.activo }}</td>
				<td>{% if entity.fechaExpiracionCuenta %}{{ entity.fechaExpiracionCuenta|date('Y-m-d H:i:s') }}{% endif%}</td>
				<td>{% if entity.fechaExpiracionCredenciales %}{{ entity.fechaExpiracionCredenciales|date('Y-m-d H:i:s') }}{% endif%}</td>
				<td>{{ entity.bloqueada }}</td>
				<td>
					<ul>
						<li>
							<a href="{{ path('admin_gestionusuario_usuario_show', { 'id': entity.id }) }}">show</a>
						</li>
						<li>
							<a href="{{ path('admin_gestionusuario_usuario_edit', { 'id': entity.id }) }}">edit</a>
						</li>
						<li>
							<a href="{{ path('admin_gestionusuario_editarpermisos', { 'id': entity.id }) }}">Permisos</a>
						</li>
						<li>
							<a href="{{ path('admin_gestionusuario_editargrupospertenece', { 'id': entity.id }) }}">Grupos</a>
						</li>
					</ul>
				</td>
			</tr>
	{% endfor %}
		</tbody>
	</table>

	<ul>
		<li>
			<a href="{{ path('admin_gestionusuario_usuario_new') }}">
				Create a new entry
			</a>
		</li>
	</ul>
{% endblock %}