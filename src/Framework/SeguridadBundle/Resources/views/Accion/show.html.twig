{% extends "FrameworkSeguridadBundle:Admin:base.html.twig" %}

{% block body %}
<h1>Accion</h1>

<table class="record_properties">
	<tbody>
		<tr>
			<th>Id</th>
			<td>{{ entity.id }}</td>
		</tr>
		<tr>
			<th>Nombre</th>
			<td>{{ entity.nombre }}</td>
		</tr>
	</tbody>
</table>

<ul class="record_actions">
	<li>
		<a href="{{ path('admin_gestionpermiso_accion') }}">
			Back to the list
		</a>
	</li>
	<li>
		<a href="{{ path('admin_gestionpermiso_accion_edit', { 'id': entity.id }) }}">
			Edit
		</a>
	</li>
	<li>
		<form action="{{ path('admin_gestionpermiso_accion_delete', { 'id': entity.id }) }}" method="post">
			{{ form_widget(delete_form) }}
				<button type="submit">Delete</button>
			</form>
		</li>
	</ul>
{% endblock %}