{% extends "FrameworkSeguridadBundle:Admin:base.html.twig" %}

{% block body %}
<h1>Permisos del {{ entity.tipoUC }} {{ entity.nombre }}</h1>
<table class="record_properties">
	<tr>
		<td>
			Permisos Actuales:
		</td>
		<td>
			<ul>
			{% for permiso in entity.permisos %}
					<li>{{ permiso }}</li>
			{% endfor %}
					</ul>
				</td>
			</tr>
		</table>
		<form action="{{ path('admin_gestionusuario_modificarpermisos', { 'id': entity.id }) }}" method="post" {{ form_enctype(editPermisos_Form) }}>
	{{ form_widget(editPermisos_Form) }}
				<p>
					<button type="submit">Modificar Permisos</button>
				</p>
			</form>
{% endblock %}